<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_padding_16dp"
        android:paddingRight="@dimen/margin_padding_16dp"
        android:paddingTop="@dimen/margin_padding_8dp"
        android:paddingBottom="@dimen/margin_padding_8dp">

        <ImageView
            android:id="@+id/img_player"
            android:layout_width="@dimen/cutout_dimension"
            android:layout_height="@dimen/cutout_dimension"
            android:src="@drawable/suso"/>

        <TextView
            android:id="@+id/tv_player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_toEndOf="@id/img_player"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/margin_padding_16dp"
            android:paddingEnd="@dimen/margin_padding_8dp"/>

        <TextView
            android:id="@+id/tv_player_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_padding_4dp"
        android:background="@drawable/shadow"
        android:layout_below="@id/layout_container"/>
</RelativeLayout>